        function valida(id) {
           @*window.location.href = '@Url.Action("Edit", "retenciones")?menu='+@ViewBag.id_menu+'&&id=' + id;*@
            window.location.href = '@Url.Action("Edit", "parametro_retenciones")?id=' + id;
