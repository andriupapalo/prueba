                                                    @Html.EditorFor(model => model.basepesos, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite Base Pesos", @onkeyUp = "return miles(this.id)", @onkeypress = "return soloNumeros(event)" } })
