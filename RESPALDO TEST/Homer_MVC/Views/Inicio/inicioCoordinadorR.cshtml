@{
    ViewBag.Title = "Coordinador de Repuestos";
    ViewBag.Icono = "fa fa-user-circle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/bundles/select2/css")
}


<div class="panel-body">
    <div class="panel-heading" style="background-color:white;  border:solid 1px; border-color:#e4e5e7">
        <div class="panel-body">

            <div id="hbreadcrumb" class="pull-right">

                <button type="button" class="btn btn-mini btn-default" style="border-radius:25px" data-container="body" data-toggle="popover" data-placement="left" data-title="Enlaces" data-content="<ul>@ViewBag.nombreEnlaces</ul>" data-html="true">
                    <i class="text-info fa fa-tags"></i>
                </button>
                <button type="button" class="btn btn-mini btn-default" style="border-radius:25px" data-container="body" data-toggle="popover" data-placement="left" data-title="Documentos" data-content="<ul></i><a href=''>Documento 1</a></ul>  <ul></i><a href=''>Documento 2</a></ul> <ul></i><a href=''>Documento 3</a></ul>" data-html="true">
                    <i class="text-primary fa fa-files-o"></i>
                </button>
                <button type="button" class="btn btn-mini btn-default" style="border-radius:25px" data-container="body" data-toggle="popover" data-placement="left" data-title="Favoritos" data-content="@ViewBag.Favoritos" data-html="true">
                    <i class="text-warning fa fa-star"></i>
                </button>

            </div>
            <h3 class="font-light m-b-xs">
                <i class="text-info @ViewBag.Icono"></i>&nbsp;&nbsp;@ViewBag.Title
            </h3>
            <small>Registro @ViewBag.Title</small>
        </div>
    </div>
</div>

<div class="content">

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div>
                    <div class="row">

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="ventaRepuestosBod" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Venta de repuestos por bodega</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-hourglass big-icon text-info"></i>
                                    <h4 class="font-bold">&nbsp;</h4>
                                    <div class="row">
                                        <a href="@Url.Action("BrowserVentasXbodega", "registroReferencias")" class="btn btn-info text-center">Venta Bodega</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="invenBodega" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Valor inventario por bodega</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-credit-card big-icon text-warning"></i>
                                    <h4 class="font-bold">&nbsp;</h4>
                                    <div class="row">
                                        <a href="@Url.Action("graficoCoordinador","kardex")" class="btn btn-warning text-center">Inventario bodega</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="rotacion" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Rotación</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-spinner big-icon text-info"></i>
                                    <h4 class="font-bold">&nbsp;</h4>
                                    <div class="row">
                                        <a href="@Url.Action("graficoRotacionMercancia","IndicadoresGraficos")" class="btn btn-info text-center">Rotación</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="nivelServido" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Nivel de servido</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-level-up big-icon text-info"></i>
                                    <h4 class="font-bold">&nbsp;</h4>
                                    <div class="row">
                                        <a href="@Url.Action("GraficoNivelServicio","IndicadoresGraficos")" class="btn btn-info text-center">Nivel servido</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="lealtad" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Lealtad</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-shield big-icon text-success"></i>
                                    <h4 class="font-bold">
                                        &nbsp;
                                    </h4>
                                    <div class="row">
                                        <a href="@Url.Action("GraficoLealtad","IndicadoresGraficos")" class="btn btn-success text-center">Lealtad</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="clasificacionABC" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Clasificación ABC $</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-area-chart big-icon text-primary-2"></i>
                                    <h4 class="font-bold">
                                        &nbsp;
                                    </h4>
                                    <div class="row">
                                        <a href="@Url.Action("graficoClasificacionABC","IndicadoresGraficos")" class="btn btn-primary2 text-center">Clasificación ABC</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="clasificacionReferencias" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Clasificación Repuestos</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-wrench big-icon text-primary"></i>
                                    <h4 class="font-bold">
                                        &nbsp;
                                    </h4>
                                    <div class="row">
                                        <a href="@Url.Action("graficoClasificacionRepuestos","IndicadoresGraficos")" class="btn btn-primary text-center">Clasificación Referencias</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="clasificacionReferencias" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center" style="height:70px">
                                    <h4 class="font-bold">Edades de Inventario </h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-wrench big-icon text-primary"></i>
                                    <h4 class="font-bold">
                                        &nbsp;
                                    </h4>
                                    <div class="row">
                                        <a href="@Url.Action("graficoClasificacionRepuestos","IndicadoresGraficos")" class="btn btn-primary text-center">Clasificación Referencias</a>
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="indicadores" style="display:none">
                            <div class="hpanel plan-box">
                                <div class="panel-heading hbuilt text-center">
                                    <h4 class="font-bold">Indicadores Generales</h4>
                                </div>
                                <div class="panel-body text-center">
                                    <i class="fa fa-signal big-icon text-danger"></i>
                                    <h4 class="font-bold">
                                        &nbsp;
                                    </h4>
                                    <div class="row">
                                        <a href="@Url.Action("indicadoresGenerales","IndicadoresGraficos")" class="btn btn-danger text-center">Indicadores Generales</a>
                                    </div>
                                </div>
                            </div>
                        </div>





                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/select2/js")

    <script type="text/javascript">

        $(document).ready(function () {
            buscarAccesos();
        });

        function buscarAccesos() {
            $.ajax({
                url: '/Inicio/buscarAccesos',
                data: {
                },
                type: "post",
                cache: false,
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        if (data[i].codigo == "OA57") {
                            $('#ventaRepuestosBod').show();
                        }
                        if (data[i].codigo == "OA45") {
                            $('#invenBodega').show();
                        }
                        if (data[i].codigo == "OA39") {
                            $('#rotacion').show();
                        }
                        if (data[i].codigo == "OA32") {
                            $('#nivelServido').show();
                        }
                        if (data[i].codigo == "OA28") {
                            $('#lealtad').show();
                        }
                        if (data[i].codigo == "OA11") {
                            $('#clasificacionABC').show();
                        }
                         if (data[i].codigo == "OA76") {
                            $('#clasificacionReferencias').show();
                        }
                         if (data[i].codigo == "OA70") {
                                $('#indicadores').show();
                            }
                      

                        
                    }
                }
            });
        }
    </script>
}
