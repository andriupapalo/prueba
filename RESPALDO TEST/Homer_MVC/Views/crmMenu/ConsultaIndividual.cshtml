    <script type="text/javascript">

        $(document).ready(function () {
            $('#menu').val(@ViewBag.id_menu);

            if ($('#txtDocumentoTercero').val()!=""){
                $('#btnBuscarDocumento').trigger('click');
            }
        });

        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            $('a[data-toggle="tab"]').removeClass('btn-primary');
            $('a[data-toggle="tab"]').addClass('btn-default');
            $(this).removeClass('btn-default');
            $(this).addClass('btn-primary');
        });




        function addCommas(nStr) {
            nStr += '';
            x = nStr.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + '.' + '$2');
            }
            return x1 + x2;
        }



        $('#btnBuscarDocumento').click(function () {
            $.ajax({
                url: '/crmMenu/BuscarTerceroPorDocumento',
                data: {
                    documento: $('#txtDocumentoTercero').val()
                },
                type: "post",
                cache: false,
                success: function (data) {
                    if (data.encontrado == true) {
                        if (data.tercero.idtpdoc == 1) {
                            $('.persona_naturalx').hide();
                            $('.persona_juridicax').show();

                        }
                        else {
                            $('.persona_naturalx').show();
                            $('.persona_juridicax').hide();
                        }
                        $('#documento').val(data.tercero.doc_tercero);
                        $('#primerNombre').val(data.tercero.prinom_tercero);
                        $('#segundoNombre').val(data.tercero.segnom_tercero);
                        $('#primerApellido').val(data.tercero.apellido_tercero);
                        $('#segundoApellido').val(data.tercero.segapellido_tercero);
                        $('#razonSocial').val(data.tercero.razon_social);
                        $('#edadtercero').val(data.tercero.edad);

                        $('#telefono').val(data.tercero.telf_tercero);
                        $('#celular').val(data.tercero.celular_tercero);
                        $('#email').val(data.tercero.email_tercero);
                        $('#direccion').val(data.tercero.direc_tercero);
                        $('#fechaNacimiento').val(data.tercero.fec_nacimiento);
                        $('#contacto_emails').val(data.tercero.habdtautor_correo);
                        $('#contacto_celulars').val(data.tercero.habdtautor_celular);
                        $('#contacto_msnms').val(data.tercero.habdtautor_msm);
                        $('#contacto_whatsapps').val(data.tercero.habdtautor_watsap);
                        //lleno la tabla de direcciones
                        $('#tablaDireccionesTercero').find('tbody').empty();
