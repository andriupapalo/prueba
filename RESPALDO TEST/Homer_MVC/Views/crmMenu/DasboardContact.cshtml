@model Homer_MVC.IcebergModel.tencabezaorden

@{
    ViewBag.Icono = "fa fa-user";
    ViewBag.Title = "Dashboard Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <link href="~/Vendor/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Vendor/bootstrap-toggle-master/css/bootstrap-toggle.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/select2/css")
    <style type="text/css">
        .bannerContenedor {
            width: 100%;
            left: 0.5%;
            height: 45rem;
            background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), linear-gradient(180deg, rgba(227, 238, 244, 0.2) 0%, rgba(227, 238, 244, 0.5) 100%, rgba(227, 238, 244, 0.5) 100%), url(../../Content/img/crm_banner.jpg);
            background-size: 100% 100%;
        }

        .imgCrm {
            width: 100%;
            height: 15rem;
            background: linear-gradient(180deg, rgba(247, 249, 250, 0.2) 0%, rgba(241, 243, 246, 0.4) 100%), url(../Content/img/crm_img.jpg);
            border-radius: 8px;
            background-size: 100% 100%;
        }

        .imgSiembras {
            width: 100%;
            height: 15rem;
            background: linear-gradient(180deg, rgba(247, 249, 250, 0.2) 0%, rgba(241, 243, 246, 0.4) 100%), url(../Content/img/siembras_img.jpg);
            border-radius: 8px;
            background-size: 100% 100%;
        }

        .imgSmart {
            width: 100%;
            height: 15rem;
            background: linear-gradient(180deg, rgba(247, 249, 250, 0.2) 0%, rgba(241, 243, 246, 0.4) 100%), url(../Content/img/smart_sales_img.jpg);
            border-radius: 8px;
            background-size: 100% 100%;
        }


        body.modal-open {
            overflow: visible !important;
        }

        textarea .form-control .requeridoGarantia {
            width: 100%;
            max-width: 100%;
        }
    </style>
}


<div class="panel-body">
    <div class="panel-heading" style="background-color:white;  border:solid 1px; border-color:#e4e5e7">
        <div class="row">
            <div class="col-md-12">
                <div class="bannerContenedor"></div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4 col-md-3" style="margin-left:13%">
            <div class="thumbnail">
                <div class="imgCrm"></div>
                <div class="caption">
                    <h3>CRM</h3>
                    <p><a href="../crmMenu/consultaClientes" class="btn btn-primary" role="button">Ingresar</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="thumbnail">
                <div class="imgSiembras"></div>
                <div class="caption">
                    <h3>Siembras y cosechas</h3>
                    <p><a href="#" class="btn btn-primary" role="button">Ingresar</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="thumbnail">
                <div class="imgSmart"></div>
                <div class="caption">
                    <h3>Smart sales</h3>
                    <p><a href="#" class="btn btn-primary" role="button">Ingresar</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/select2/js")
    <script src="~/Vendor/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Vendor/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Vendor/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Vendor/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Vendor/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Vendor/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/Vendor/datatablesExcelExport/dataTable1.4.0-buttons.js"></script>
    <script src="~/Vendor/datatablesExcelExport/JSZip3.1.3.min.js"></script>
    <script src="~/Vendor/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Vendor/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Vendor/datatablesExcelExport/jsZipDataTables.js"></script>
    <script src="~/Vendor/bootstrap-toggle-master/js/bootstrap-toggle.min.js"></script>
    <script src="~/Vendor/moment/moment.js"></script>
    <script src="~/Vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
}