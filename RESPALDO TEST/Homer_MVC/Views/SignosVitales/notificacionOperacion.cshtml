                                                            <td style="text-align: right;">@Model.operacion</td>
                                                        </tr>
                                                        <tr>
                                                            <td width="10%"> <b>Repuesto </b> </td>
                                                            <td style="text-align: right;">@Model.referencia </td>
                                                        </tr>
