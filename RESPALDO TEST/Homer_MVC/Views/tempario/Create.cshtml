        function formatNumber3(n) {
        var m = n;
            var nn = m.indexOf(",");
            debugger;
        if (nn != -1) {
            var n2 = n.split(',', 2);
            m = n2[0];
            if (m === '') {
                return m;
            }
            else {
                var o = n2[1];
                o = String(o).replace(/\D/g, "");
                m = String(m).replace(/\D/g, "");
                m=String(m).replace(/\B(?=(\d{3})+(?!\d))/g, ".");
                m = m +','+ o;
                return m;
            }

        }
        else {
            m = String(m).replace(/\D/g, "");
            return m === '' ? m : String(m).replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }
        // return n === '' ? n : Number(n).toLocaleString();
    }

