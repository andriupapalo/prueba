@model Homer_MVC.Models.SalidaPDF

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Salida repuesto</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
        }

        table, tr, td {
            border-collapse: collapse;
            border: 1px solid #ccc;
            padding-left: 5px;
        }

        body {
            font-size: 15px;
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>

            <td colspan="6" align="center">COMERCIALIZADORA HOMAZ S.A.S- SALIDA A TALLER @*@Model.nombreDetalle*@</td>
            <td>N° @Model.numeroRegistro</td>

        </tr>
        <tr>

            <td colspan="6" align="center">@Model.nombreBodega</td>
            <td>@Model.fechaRegistro</td>

        </tr>

        <tr>

            <td colspan="3" align="center">ORDEN DE TRABAJO: </td>
            <td colspan="3" align="center">PLACA: </td>
            <td colspan="2" align="center"></td>

        </tr>
        <tr>

            <td align="center">Secuencia</td>
            <td align="center">Número Refencia</td>
            <td align="center">Descripción</td>
            <td align="center">Cantidad</td>
            <td align="center">Costo unidad</td>
            <td align="center">Costo total</td>
            <td align="center">Notas</td>


        </tr>
        @for (var u = 0; u < @Model.referencias.Count(); u++)
        {
            <tr>

                <td align="center">@Model.referencias[u].secuencia</td>
                <td align="right">@Model.referencias[u].codigo</td>
                <td align="left">@Model.referencias[u].descripcion</td>
                <td align="right">@Model.referencias[u].cantidad</td>
                <td align="right">@Model.referencias[u].costo</td>
                <td align="right">@Model.referencias[u].total</td>
                <td align="right">@Model.notas</td>

            </tr>
        }
        <tr>

            <td colspan="3" align="left">R. Bodega </td>
            <td colspan="3" align="left">R. Taller </td>
            <td colspan="2" align="right">Total @Model.TotalTotales</td>

        </tr>
    </table>
</body>
</html>

