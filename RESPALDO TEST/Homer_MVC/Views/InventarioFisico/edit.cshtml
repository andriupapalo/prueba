                    @using (Html.BeginForm())
                    {
                        <div class="panel-body-btns text-right">

                            <button id="crearNuevo" name="crearNuevo" onclick="crear()" class="btn btn-info" type="button">Crear Nuevo</button>
                            <button id="Bloquear" name="Bloquear" onclick="bloquear()" class="btn btn-danger" type="button">Bloquear Inventario</button>
                            <button id="Desbloquear" name="Desbloquear" onclick="desbloquear()" class="btn btn-success" type="button">Desbloquear Inventario</button>

                        </div>

                        @Html.AntiForgeryToken()
                        @Html.Hidden("menu")

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

