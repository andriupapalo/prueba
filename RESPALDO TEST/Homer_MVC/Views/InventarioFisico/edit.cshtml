        function bloquear() {

            var fecha = '@DateTime.Now.ToString("yyyy/MM/dd")';

            if ( $('#fechaInicia').val() == fecha ) {
                swal({
                    title: 'Confirme',
                    text: 'Asegurese de haber creado todas la parejas y asignado sus ubicaciones. Después de bloquear no se podrán hacer cambios.',
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Si, enviar!",
                    cancelButtonText: "No, cancelar!",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url:'/InventarioFisico/bloquearInventario',
                            data: {
                                encab: @ViewBag.id_encabezado,
                            },
                            type: 'post',
                            cache: false,
                            success: function(data){
                                if (data == true) {
                                    window.location.reload()
                                }else if (data == false) {
                                    setTimeout(function(){
                                        swal("No se pudo bloquear el inventario","Hay otra auditoria de inventario para esta bodega en estado activo. Por favor valide","error")
                                    },800)
                                }
                                if (data.finalizado == true) {
                                    setTimeout(function(){
                                        swal("No se pudo bloquear el inventario","Este inventario ya finalizó","error")
                                    },800)
                                }
                            }
                        })
                    }
                })
            }else{
                swal("Debe bloquear el inventario en la fecha de inicio del encabezado","","error")
            }
        }

