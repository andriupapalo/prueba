    function buscarAjaxRepuestos() {
        $("#tablaPaginada").dataTable().fnDestroy();
        $.ajax({
            url: '/ubicacion_repuestobod/BuscarUbicacionR',
            data: {
            },
            type: "post",
            cache: false,
            success: function (data) {
                $('#tablaPaginada').find('tbody').empty();
