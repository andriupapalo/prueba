@model Homer_MVC.Models.PDFmodel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nota Débito</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
        }

        table, tr, td {
            border-collapse: collapse;
            border: 1px solid #ccc;
            padding-left: 5px;
        }

        body {
            font-size: 15px;
        }

        p {
            margin: 2px;
            padding: 2px;
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr style="border:hidden">
            <td style="width:50%; border:hidden">
                COMERCIALIZADORA HOMAZ S.A.S <br />
                NIT 816.003.186-5 <br />
                SEDE PRINCIPAL <br />
                Avenida 30 de Agosto No. 94-165 PBX. 3135000<br />
                Pereira - Risaralda
            </td>
            <td style="width:25%">
                <h3 style="text-align:left">@Model.tipoEntrada N°: @Model.prefijo - @Model.numeroEntrada </h3>
                <h3 style="text-align:left">Fecha : @Model.fechaEncab</h3>
            </td>

        </tr>
    </table>
    <br />
    <table style="width:100%">


        <tr style="width:50%; text-align:left">
            <th>
                <p>Cliente: @Model.nombreTercero</p>
                <p>Cédula/NIT: @Model.Idtercero</p>
                <p>Teléfono: @Model.telefono</p>
                <p>Vendedor: @Model.vendedor</p>
            </th>
            <th style="width:50%;text-align:left">
                <p>Dirección: @Model.direccion</p>
                <p>Ciudad: @Model.ciudad</p>
                <p>Factura N°: @Model.numeroFactura</p>
                <p>Responsable: @Model.responsable</p>
            </th>
        </tr>


    </table>
    <table style="width:100%">
        <tr>
            <td style="padding:0px">
                <h4 style="margin:2px">Por concepto de:</h4>
                <br />
                <p>@Model.detalleConcepto</p>
            </td>
        </tr>
    </table>

    <table style="width:100%">
        <tr>

            <td style="width:25%"></td>
            <td style="width:30%"></td>

            <td style="width:20%;border-left:hidden; border-right:hidden">
                <p>COSTO REP</p>
                <p style="margin:0px">VALOR:</p>
                <p>DESCUENTOS</p>
                <p>SUBTOTAL:</p>
                <p>IVA:</p>
                <p>TOTAL:</p>
            </td>
            <td style="width:25%; text-align:right">
                <p>0</p>
                <p>@Model.valorTotal</p>
                <p>0</p>
                <p>@Model.subtotal</p>
                <p>@Model.iva</p>
                <p><strong>@Model.totalfinal</strong></p>
            </td>

        </tr>

    </table>
    <table style="width:100%">
        <tr>
            <td style="width:50%;height:80px;vertical-align:bottom;text-align:center">CONTABILIZADO</td>
            <td style="width:50%;height:80px;vertical-align:bottom;text-align:center">FIRMA AUTORIZADA</td>
        </tr>
    </table>

</body>
</html>