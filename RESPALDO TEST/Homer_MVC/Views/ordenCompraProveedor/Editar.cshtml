        function buscarPrecios(ref, pos) {
            $("#precio" + pos + "").val('')
            $("#descuento" + pos + "").val('')
            $("#iva" + pos + "").val('')

            $.ajax({
                url: '/inventario_repuesto/buscarPrecios',
                data: {
                    codigo: ref
                },
                type: "post",
                cache: false,
                success: function (data) {
                    console.log(data)

                    for (var i = 0; i < data.length; i++) {
                        $("#precio" + pos + "").val(data[i].precio)
                        $("#descuento" + pos + "").val(data[i].descuento)
                        $("#iva" + pos + "").val(data[i].iva)
                        $("#cantidad" + pos + "").val('1')
                        $("#ValorIva" + pos + "").val((data[i].precio * data[i].iva) / 100)
                        $("#subtotalPorReferencia" + pos + "").val(data[i].precio - (data[i].precio * data[i].descuento) / 100)
                    }
                },
                complete: function (data) {
                    calcularSubTotal(pos);
                }
            });
        }

