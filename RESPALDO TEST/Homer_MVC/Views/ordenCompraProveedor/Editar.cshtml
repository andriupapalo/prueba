        function CalcularTotales(){
            var subTotales = 0;
            var valorAntes = 0;
            var ivaTotales = 0;
            for(var i = 0; i < contadorReferencias; i++){
                if( typeof($('#valor_subtotal_referenciaTable'+i+'').val()) != "undefined"){
