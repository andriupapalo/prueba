                                            <div class="col-md-6">
                                                @Html.Editor("txtIvaValor", new { htmlAttributes = new { @class = "form-control", @placeholder = "($)", @readonly = "readonly" } })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">Subtotal:&nbsp;<span class="text-danger">*</span></label>
                                            <div class="col-md-6">
                                                @Html.Editor("txtSubtotal", new { htmlAttributes = new { @class = "form-control", @placeholder = "($)", @readonly = "readonly" } })
