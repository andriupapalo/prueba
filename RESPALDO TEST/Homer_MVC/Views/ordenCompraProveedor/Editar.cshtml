                                            <div class="form-group">
                                                <label class="control-label col-md-4">Descuento ($):&nbsp;</label>
                                                <div class="col-md-6">
                                                    @Html.EditorFor(model => model.descuentopie, new { htmlAttributes = new { @class = "form-control recalcular", @placeholder = "Digite Valor Descuento", @onkeyUp = "return miles(this.id)" } })
                                                </div>
