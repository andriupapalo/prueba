                }
                if( typeof($('#valor_iva_referenciaTable'+i+'').val()) != "undefined"){
                    ivaTotales += parseInt($('#valor_iva_referenciaTable'+i+'').val());
                }
                if( typeof($('#valorAntes'+i+'').val()) != "undefined"){
                    valorAntes += parseInt($('#valorAntes'+i+'').val());
                }
            }

            var valorFletes = $.trim($('#fletes').val());
            var valorDescuento = $.trim($('#descuentopie').val());
            var porcentaje_iva_flete = $.trim($('#ivafletes').val());

            if(valorFletes == ''){
                valorFletes = 0;
            }else{
                valorFletes = $('#fletes').val().replace(/\./g, "");
            }
            if(valorDescuento == ''){
                valorDescuento = 0;
            }else{
                valorDescuento = $('#descuentopie').val().replace(/\./g, "");
            }
            if(porcentaje_iva_flete == ''){
                porcentaje_iva_flete = 0;
            }

            var valorFlete = Math.round((parseFloat(valorFletes)*parseFloat(porcentaje_iva_flete))/100);
            var valorTotal = subTotales - parseFloat(valorDescuento) + parseFloat(valorFlete) + parseFloat(valorFletes);
            $('#txtFleteCalculado').val(addComas(valorFlete));
            $('#txtTotalSubTotales').val(addComas(valorAntes));
            $('#txtTotalIva').val(addComas(ivaTotales));
            $('#txtValor').val(addComas(subTotales));
        }


