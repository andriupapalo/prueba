@model Homer_MVC.Models.PDFCotizacionOT
@using System.Globalization;

@{
    Layout = null;
    CultureInfo elGR = CultureInfo.CreateSpecificCulture("es-CO");
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PRESUPUESTO</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
        }

        html,body {
            width: 100%;
        }

        table, tr, td {
            height:auto;
            border-collapse: collapse;
            border: 1px solid #ccc;
            /*padding-left: 5px;*/
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-row-group;
        }

        tr {
            page-break-inside: avoid;
        }

        table, tr, td, th, tbody, thead, tfoot, td div {
            page-break-inside: avoid !important;
        }
    </style>
</head>
<body >
    <div class="contenedor">

        <table style="width:100%">

            <tr style="width:100%">
                <th colspan="4" style="text-align:center; background-color:#D8D8D8">DATOS GENERALES</th>
            </tr>

            <tr style="width:100%">
                <td colspan="4">
                    <table width="100%">
                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>CLIENTE: </strong> &nbsp;  @Model.nombrecliente</td>
                            <td colspan="6" style="text-align:left;"><strong>PLACA: </strong> &nbsp; @Model.placa</td>
                            <td colspan="6" style="text-align:left;"><strong>K.M.T: </strong> &nbsp; </td>

                        </tr>

                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>ASEGURADO A : </strong> &nbsp;@Model.nombrecliente</td>
                            <td colspan="6" style="text-align:left;"><strong>VEHICULO: </strong> &nbsp;@Model.modelo</td>
                            <td colspan="6" style="text-align:left;"><strong>NUMERO: </strong> &nbsp;@Model.serie</td>

                        </tr>

                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>CEDULA/NIT : </strong> &nbsp;@Model.txtDocumentoCliente</td>
                            <td colspan="6" style="text-align:left;"><strong>SERIE: </strong> &nbsp;@Model.serie</td>
                            <td colspan="6" style="text-align:left;"><strong>ASESOR: </strong> &nbsp;@Model.tecnico</td>

                        </tr>

                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>DIRECCION : </strong> &nbsp;@Model.correocliente</td>
                            <td colspan="6" style="text-align:left;"><strong>MODELO: </strong> &nbsp;@Model.anio_modelo</td>
                            <td colspan="6" style="text-align:left;"><strong></strong> &nbsp;</td>

                        </tr>

                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>TELEFONO: </strong> &nbsp;@Model.celularcliente</td>
                            <td colspan="6" style="text-align:left;"><strong></strong> &nbsp;</td>
                            <td colspan="6" style="text-align:left;"><strong></strong> &nbsp;</td>

                        </tr>

                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>CIUDAD : </strong> &nbsp;@Model.ciudadcliente</td>
                            <td colspan="6" style="text-align:left;"><strong></strong> &nbsp;</td>
                            <td colspan="6" style="text-align:left;"><strong></strong> &nbsp;</td>

                        </tr>
                        <tr style="width:100%">

                            <td colspan="6" style="text-align:left;"><strong>FECHA PRESUPUESTO : </strong> &nbsp;@Model.fecha_generacion</td>
                            <td colspan="6" style="text-align:left;"><strong>FECHA PROMETIDA : </strong> &nbsp;@Model.fecha_prometida</td>
                            <td colspan="6" style="text-align:left;"><strong></strong> &nbsp;</td>

                        </tr>

                    </table>

                </td>
            </tr>

            <tr style="width:100%; display:none">

                <td colspan="4">
                    <br />
                    @if (!string.IsNullOrWhiteSpace(Model.garantia_falla) && !string.IsNullOrWhiteSpace(Model.garantia_causa) && !string.IsNullOrWhiteSpace(Model.garantia_solucion))
                    {
                        <h6 style="text-align:left"><strong>EL CLIENTE MANIFIESTA QUE EL VEHÍCULO PRESENTA LO SIGUIENTE: </strong></h6>
                        <h6>@Model.garantia_falla</h6>
                        <h6>@Model.garantia_causa</h6>
                        <h6>@Model.garantia_solucion</h6>
                    }
                    else
                    {
                        <h6 style="text-align:left"><strong>EL CLIENTE MANIFIESTA QUE EL VEHÍCULO PRESENTA LO SIGUIENTE: </strong>_____________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <br />
                    }

                </td>
            </tr>
        </table>
        <br />

        <table style="width:100%">

            <tr style="width:100%">
                <th colspan="4" style="text-align:center; background-color:#D8D8D8">DESCRIPCIÓN DEL SERVICIO</th>
            </tr>

            <tr style="width:100%">
                <td colspan="4">
                    <table width="100%">
                        <tr style="width:100%">
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">CODIGO</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">OPERACION</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">TIEMPO</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">TECNICO</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">VALOR TOTAL</td>
                        </tr>

                        @foreach (var item2 in Model.operaciones)
                        {
                            <tr style="width:100%">
                                <td colspan="4">@item2.codigo</td>
                                <td colspan="4">@item2.operacion</td>
                                <td colspan="4">@item2.tiempo</td>
                                <td colspan="4">@item2.tecnico</td>
                                <td colspan="4">@item2.valor_total</td>
                            </tr>
                        }
                    <tr style="width:100%">
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:left; background-color:#D8D8D8">TOTAL MANO DE OBRA</td>
                        <td colspan="4" style="text-align:left; background-color:#D8D8D8">@Model.totalvaloroperaciones</td>
                    </tr>
                    </table>

                </td>
            </tr>

            <tr style="width:100%; display:none">

                <td colspan="4">
                    <br />
                    @if (!string.IsNullOrWhiteSpace(Model.garantia_falla) && !string.IsNullOrWhiteSpace(Model.garantia_causa) && !string.IsNullOrWhiteSpace(Model.garantia_solucion))
                    {
                        <h6 style="text-align:left"><strong>EL CLIENTE MANIFIESTA QUE EL VEHÍCULO PRESENTA LO SIGUIENTE: </strong></h6>
                        <h6>@Model.garantia_falla</h6>
                        <h6>@Model.garantia_causa</h6>
                        <h6>@Model.garantia_solucion</h6>
                    }
                    else
                    {
                        <h6 style="text-align:left"><strong>EL CLIENTE MANIFIESTA QUE EL VEHÍCULO PRESENTA LO SIGUIENTE: </strong>_____________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <br />
                    }

                </td>
            </tr>
        </table>
        <br />

        <table style="width:100%">

            <tr style="width:100%">
                <th colspan="4" style="text-align:center; background-color:#D8D8D8">DESCRIPCIÓN DEL REPUESTO</th>
            </tr>

            <tr style="width:100%">
                <td colspan="4">
                    <table width="100%">
                        <tr style="width:100%">
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">CODIGO</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">DESCRIPCION</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">CANTIDAD</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">PRECIO UNITARIO</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">IVA</td>
                            <td colspan="4" style="text-align:center; background-color:#D8D8D8">VALOR TOTAL</td>
                        </tr>

                        @foreach (var item2 in Model.repuestos)
                        {
                            <tr style="width:100%">
                                <td colspan="4">@item2.codigo</td>
                                <td colspan="4">@item2.descripcion</td>
                                <td colspan="4">@item2.cantidad</td>
                                <td colspan="4">@item2.precio_unitario</td>
                                <td colspan="4">@item2.iva</td>
                                <td colspan="4">@item2.precio_total</td>
                            </tr>
                        }
                    <tr style="width:100%">
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8"></td>
                        <td colspan="4" style="text-align:left; background-color:#D8D8D8">TOTAL REPUESTOS</td>
                        <td colspan="4" style="text-align:left; background-color:#D8D8D8">@Model.totalvalorrepuestos</td>
                    </tr>
                    </table>

                </td>
            </tr>

            <tr style="width:100%; display:none">

                <td colspan="4">
                    <br />
                    @if (!string.IsNullOrWhiteSpace(Model.garantia_falla) && !string.IsNullOrWhiteSpace(Model.garantia_causa) && !string.IsNullOrWhiteSpace(Model.garantia_solucion))
                    {
                        <h6 style="text-align:left"><strong>EL CLIENTE MANIFIESTA QUE EL VEHÍCULO PRESENTA LO SIGUIENTE: </strong></h6>
                        <h6>@Model.garantia_falla</h6>
                        <h6>@Model.garantia_causa</h6>
                        <h6>@Model.garantia_solucion</h6>
                    }
                    else
                    {
                        <h6 style="text-align:left"><strong>EL CLIENTE MANIFIESTA QUE EL VEHÍCULO PRESENTA LO SIGUIENTE: </strong>_____________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <h6>__________________________________________________________________________________________________________________________________________________________________________________________________________________</h6>
                        <br />
                    }

                </td>
            </tr>
        </table>
        <br />

        <table class="table_principal" style="width:100%;">
            <tr style="width:100%; height:180px; vertical-align:bottom">
                <td style="width:600px; border:none;  text-align:center">
                    <p><h4> </h4></p>
                    <p>
                    <h4>COMERCIALIZADORA  HOMER S.A.S</h4>
                    <h6> ESTE PRESUPUESTO TIENE UNA VALIDEZ DE TREINTA(30) DIAS APARTIR DE LA FECHA  PRECIO SUJETOS A CAMBIOS SIN PREVIO AVISO</h6>   
                    </p>
                </td>
                <td style="width:400px; border:none; text-align:center">
                    <table style="width:100%;border:none;">

                        <tr style="width:100%;border:none;">
                            <td colspan="4" style="border:none;">
                                <table width="100%" style="width:400px; border:none; text-align:left">

                                    <tr style="width:100% ;border:none; text-align:left" >

                                        <td colspan="6" style="width:400px; border:none; text-align:left"><strong>VALOR MANO DE OBRA: </strong> &nbsp;@Model.totalvaloroperaciones</td>

                                    </tr>

                                    <tr style="width:100% ;border:none; text-align:left">

                                        <td colspan="6" style="width:400px; border:none; text-align:left"><strong>VALOR DE REPUESTOS: </strong> &nbsp;@Model.totalvalorrepuestos</td>

                                    </tr>

                                    <tr style="width:100% ;border:none; text-align:left">

                                        <td colspan="6" style="width:400px; border:none; text-align:left"><strong>VALOR DESCUENTO: </strong> &nbsp;@Model.valorDescuento</td>

                                    </tr>

                                    <tr style="width:100% ;border:none; text-align:left">

                                        <td colspan="6" style="width:400px; border:none; text-align:left"><strong>VALOR IVA : </strong> &nbsp;@Model.valorIva</td>

                                    </tr>

                                    <tr style="width:100% ;border:none; text-align:left">

                                        <td colspan="6" style="width:400px; border:none; text-align:left"><strong>VALOR TOTAL: </strong> &nbsp;@Model.valorTotal</td>

                                    </tr>


                                </table>

                            </td>
                        </tr>
                    </table>
                </td>

            </tr>
            <tr style="width:100%; height:180px; vertical-align:bottom">
                <td style="width:600px; border:none;  text-align:center">
                    <p><h4> </h4></p>
                    <p><h4> </h4></p>

                    <p><h4>CLIENTE/CC</h4></p>
                </td>
                <td style="width:400px; border:none; text-align:center">
                    <p><h4>FIRMA AUTORIZADA</h4></p>
                </td>

            </tr>
        </table>



    </div>
</body>
</html>
