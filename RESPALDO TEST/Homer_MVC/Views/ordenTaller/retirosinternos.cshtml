                                    tabla += "<tr>";
                                    tabla += "<td>" + result.operacion[i].operacion + "</td>";
                                    tabla += "<td>" + result.operacion[i].valor_total + "</td>";
                                    tabla += "<td>";
                                    tabla += "<button class='btn btn-sm  btn-success' onclick='Respuestaauto(" + result.operacion[i].id + ",1)' >Si</button>";
