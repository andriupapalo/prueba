            {
                <tr style="width:auto; height:30px; background-color:none; color:black; border-top-color:black">
                    <td style="text-align:left;width:40%">@Model.abonosboleto[i].descripcion_abono</td>
                    <td style="text-align:right;width:40%">$ @Model.abonosboleto[i].monto_abono</td>
                    @*<td style="text-align:center;width:20%">@Model.abonosboleto[i].val_unitario_accesorio</td>
                        <td style="text-align:center;width:20%">@Model.abonosboleto[i].val_monto_accesorio</td>*@
                </tr>
            }
