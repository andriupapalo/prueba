@model Homer_MVC.Models.PDF_ModeloBoletosalida

@{
    Layout = null;
}

<!DOCTYPE html>
@*laura*@
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.titulo</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
            /*font-family: Arial;*/
        }

        table, tr, td {
            border-collapse: collapse;
            border: 1px solid #ccc;
            padding-left: 5px;
        }

        body {
            /*font-size: 15px;*/
            font-family: Arial, Helvetica, sans-serif;
        }

        .table_principal {
            border-collapse: collapse;
            border: 1px solid #ccc;
            border-radius: 10px;
            -moz-border-radius: 6px;
            padding-left: 5px;
        }

        .indented {
            padding-left: 10pt;
            padding-right: 10pt;
        }

        .indented2 {
            padding-left: 10pt;
            padding-right: 1pt;
        }

        .indented3 {
            padding-left: 1pt;
            padding-right: 10pt;
        }
