                    <td style="width:25%;text-align:right">$ @Model.cuota_inicial_valor</td>
                </tr>
                <tr>
                    <td style="width:25%;background:#e5e5e5">FINANCIERA RC/NC</td>
                    <td style="width:25%;text-align:left">@Model.financiera</td>
                    <td style="width:25%;background:#e5e5e5">FINANCIERA VALOR</td>
                    <td style="width:25%;text-align:right">$ @Model.finanaciera_valor</td>
                </tr>

                <tr>
                    <td style="width:25%; background:#e5e5e5">RETOMA RC/NC</td>
                    <td style="width:25%;text-align:left">@Model.retoma</td>
                    <td style="width:25%; background:#e5e5e5">RETOMA VALOR</td>
                    <td style="width:25%;text-align:right">$ @Model.retoma_valor</td>
                </tr>

            </tbody>
        </table>
        <br>
        <table class="table_principal" style="width:100%; height:30px; grid-row:7; margin-right:10px; margin-right:10px">
