</head>
<body>
    <div class="contenedor">
        <table style="width:100%">
            <tr>
                <td style="width:35%; text-align:center; border:none"><img src="@Server.MapPath("~/Images/LogoCaminos.jpg")" style="width:80%" /></td>
                <td style="width:30%; text-align:center; border:none"><h4>@Model.titulo<br /><p style="padding:8px;">N. @Model.factura</p></h4></td>
                <td style="width:35%; border:none; padding-left:10%">
                    <p style="font-size:11px; padding:0px; margin:0">@Model.nombreEmpre  NIT @Model.nitEmpre</p>
                    <p style="font-size:11px; padding:0px; margin:0">@Model.dirEmpre</p>
                    <p style="font-size:11px; padding:0px; margin:0"></p>
                    <p style="font-size:11px; padding:0px; margin:0"></p>
                    <p style="font-size:11px; padding:0px; margin:0">www.caminos.com.co</p>
                    <p style="font-size:11px; padding:0px; margin:0">caminos@caminos.com.co</p>
                </td>
            </tr>

            @*<tr>
                    <td colspan="2"></td>
                    <td style="padding-left:5px; margin:0px;">
                        <p style="display:inline-block; width:30%;padding:0px; margin:0px;">Dia / @Model.DiaPedido </p><p style="display:inline-block;
                        width:30%;padding:0px; margin:0px;">Mes /@Model.MesPedido</p><p style="display:inline-block; width:30%;padding:0px; margin:0px;">A&ntilde;o / @Model.AnioPedido</p>
                    </td>
                </tr>*@
        </table>
        <br>
        <br>
        <br>
        <table style="width:100%">
            <thead style="background:#e5e5e5; text-align:center;">
                <tr>
                    <th colspan="4">DATOS DEL CLIENTE</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="width:20%; background:#e5e5e5">NOMBRES Y APELLIDOS</td>
                    <td style="width:35%">@Model.cliente</td>
                    <td style="width:20%; background:#e5e5e5">ASESOR</td>
                    <td style="width:25%">@Model.asesor</td>
                </tr>
            </tbody>
        </table>
        <br>
        <table style="width:100%; margin-top:5px;">
            <thead style="background:#e5e5e5; text-align:center;">
                <tr>
                    <th colspan="4">CARGOS</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="width:25%; background:#e5e5e5">VEHICULO FR/ND</td>
                    <td style="width:25%;text-align:left">@Model.vehiculo_frand</td>
                    <td style="width:25%; background:#e5e5e5">VEHICULO VALOR</td>
                    <td style="width:25%;text-align:right">$ @Model.vehiculo_valor</td>
                </tr>
                <tr>
                    <td style="width:25%; background:#e5e5e5">MATRICULA FR/ND</td>
                    <td style="width:25%;text-align:left">@Model.matricula_frand</td>
                    <td style="width:25%; background:#e5e5e5">MATRICULA VALOR</td>
                    <td style="width:25%;text-align:right">$ @Model.matricula_valor</td>
                </tr>

                <tr>
                    <td style="width:25%; background:#e5e5e5">SOAT FR/ND</td>
                    <td style="width:25%;text-align:left">@Model.soat_frand</td>
                    <td style="width:25%; background:#e5e5e5">SOAT VALOR</td>
                    <td style="width:25%;text-align:right">$ @Model.soat_valor</td>
                </tr>
                <tr>
                    <td style="width:25%; background:#e5e5e5">POLIZA CUOTAS</td>
                    <td style="width:25%; text-align:left">@Model.poliza_frand</td>
                    <td style="width:25%; background:#e5e5e5">POLIZA</td>
                    <td style="width:25%;text-align:right">$ @Model.poliza_valor</td>
                </tr>
                <tr>
                    <td style="width:25%; background:#e5e5e5">MODELO VEHICULO</td>
                    <td style="width:25%;text-align:left">@Model.veh_modelo</td>
                    <td style="width:25%; background:#e5e5e5">PLACA VEHICULO</td>
                    <td style="width:25%;text-align:right"> @Model.placa</td>
                </tr>
                <tr>
                    <td style="width:25%; background:#e5e5e5">SERIE DEL VEHICULO</td>
                    <td style="width:25%;text-align:left">@Model.serVeh</td>
                    <td style="width:25%; background:#e5e5e5"></td>
                    <td style="width:25%;text-align:left"></td>
                </tr>
            </tbody>
        </table>
        <br>
        <table class="table_principal" style="width:100%; height:30px; grid-row:7; margin-right:10px; margin-right:10px">
            <thead style="background:#e5e5e5; text-align:center;">
                <tr>
                    <th colspan="5">ACCESORIOS VEHICULO</th>
                </tr>
            </thead>
            <tr style="background-color:" ">
                <th style="border: 1px solid #ccc;text-align:left;width:30%;background:#e5e5e5">NÚMERO DE FACTURA</th>
                <th style="border: 1px solid #ccc;text-align:left;width:20%;background:#e5e5e5">REFERENCIA</th>
                <th style="border: 1px solid #ccc;text-align:left;width:10%;background:#e5e5e5">CAN</th>
                <th style="border: 1px solid #ccc;text-align:right;width:20%;background:#e5e5e5">$ PRECIO UNITARIO</th>
                <th style="border: 1px solid #ccc;text-align:right;width:20%;background:#e5e5e5">$ VALOR</th>
            </tr>
            @for (var i = 0; i < @Model.accesoriosboleto.Count(); i++)
            {
                <tr style="width:auto; height:30px; background-color:none; color:black; border-top-color:black">
                    <td style="text-align:left;width:20%">@Model.accesoriosboleto[i].id_accesorio_modelo</td>
                    <td style="text-align:left;width:20%">@Model.accesoriosboleto[i].descripcion_accesorio</td>
                    <td style="text-align:right;width:20%">@Model.accesoriosboleto[i].cant_acccesorio</td>
                    <td style="text-align:right;width:20%">$ @Model.accesoriosboleto[i].val_unitario_accesorio</td>
                    <td style="text-align:right;width:20%">$ @Model.accesoriosboleto[i].val_monto_accesorio</td>
                </tr>
            }
        </table>
        <br>
        <table style="width:100%">
            <thead>
                <tr>
                    <th colspan="2" style="width:50%; background:#e5e5e5">TOTAL CARGOS</th>
                    <th colspan="2" style="text-align:right">$ @Model.total_cargos</th>
                </tr>
            </thead>
            <tbody>
                @*<tr>
                        <td style="width:90%">@Model.cliente</td>
                    </tr>*@
            </tbody>
        </table>
        <br>
        <table style="width:100%; margin-top:5px;">
            <thead style="background:#e5e5e5; text-align:center;">
                <tr>
                    <th colspan="4">FORMAS DE PAGO</th>
                </tr>
            </thead>
