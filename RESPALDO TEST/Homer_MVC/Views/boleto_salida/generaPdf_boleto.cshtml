                <tr>
                    <th colspan="4">ABONOS DESCUENTOS</th>
                </tr>
            </thead>
            <tr style="background-color:">
                <th style="border: 1px solid #ccc;text-align:center;width:40%;background:#e5e5e5">REFERENCIA</th>
                @*<th style="border: 1px solid #ccc;text-align:center;width:10%;background:#e5e5e5">CAN</th>*@
                @*<th style="border: 1px solid #ccc;text-align:center;width:20%;background:#e5e5e5">PRECIO UNITARIO</th>*@
                <th style="border: 1px solid #ccc;text-align:center;width:40%;background:#e5e5e5">VALOR</th>
            </tr>
