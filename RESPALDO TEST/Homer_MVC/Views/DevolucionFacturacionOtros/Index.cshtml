    <script src="~/Vendor/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Vendor/datatablesExcelExport/jsZipDataTables.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('.js-source-states').select2();
            $('#menu').val(@ViewBag.id_menu);

            $.ajax({
                url: '/FacturacionOtros/BuscarDatosVenta',
                data: {
                },
                type: "post",
                cache: false,
                success: function (data) {
                    $('#tablaPaginada').find('tbody').empty();
                    for (var i = 0; i < data.length; i++) {
                        $('#tablaPaginada').find('tbody').append('<tr><td align="left">'
                                        + data[i].tipoDocumento + '</td><td align="right">'
                                        + data[i].numero + '</td><td align="left">'
                                        + data[i].fecha + '</td><td align="left">'
                                        + data[i].nit + '</td><td align="right">$'
                                        + addComas(data[i].valor_total) + '</td><td align="left">'
                                        + data[i].bodega + '</td><td align="center"><button class="btn btn-info btn-xs" onclick="valida('
                                        + '\'' + data[i].id
                                        + '\')">Ver</button>'
                                        +'&nbsp;<button class="btn btn-primary btn-xs" onclick="devolucion_manual('
                                        + '\'' + data[i].id
                                        + '\')">D. Manual</button>&nbsp;<button class="btn btn-success btn-xs" onclick="devolucion_automatica('
                                        + '\'' + data[i].id
                                        + '\')">D. Automatica</button>'
                                        + '</td></tr>');
                    }
                },
                complete: function (data) {
                    $('#tablaPaginada').dataTable({
                        //dom: "<''<'col-sm-4'l><'col-sm-4 text-center'B><'col-sm-4'f>>t<'col-sm-4'i>p",
                        dom: "<''<'col-md-6'l><'col-md-6'f>>t<'col-md-4'i><'col-md-8 text-right'pB>",
                        "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                        buttons: [
                            { extend: 'excel', className: 'btn-sm', text: 'Exportar a Excel' },
                            //{ extend: 'pdf', className: 'btn-sm', text: 'PDF' },
                            //{ extend: 'print', className: 'btn-sm', text: 'Imprimir' },
                        ]
                    });
                }
            })
        });

        function valida(id) {
            window.location.href = '@Url.Action("DetalleFactura", "FacturacionOtros")?menu='+@ViewBag.id_menu+'&&id=' + id;
        }

        function addCommas(nStr) {
            nStr += '';
            x = nStr.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + '.' + '$2');
            }
            return x1 + x2;
        }

        $('#selectTipoDocumento').change(function () {
            $.ajax({
                url: '/DevolucionFacturacionOtros/BuscarBodegasPorDocumento',  //   url: '/devolucionComprasRepuestos/BuscarBodegasPorDocumento',
                data: {
                    id: $('#selectTipoDocumento').val(),
                    bodegaDevol: $('#bodega').val(),
                },
                type: "post",
                cache: false,
                success: function (data) {
                    if (data != 0) {
                        $('#errorBodega').hide();
                        $('#btnEnviarDevolucion').prop('disabled', false);
                        $('#btnEnviarDevolucion').show();
                        for (var i = 0; i < data.length; i++) {
                            $('#idBodega').val(data[i].id);
                            $('#nombreBodega').val(data[i].bodccs_nombre);
                        }
                    }
                    else {
