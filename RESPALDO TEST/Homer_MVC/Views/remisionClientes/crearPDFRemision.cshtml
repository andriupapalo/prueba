@model Homer_MVC.Models.PdfRemision
@using System.Globalization;

@{
    Layout = null;
    CultureInfo elGR = CultureInfo.CreateSpecificCulture("is-IS");
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Remisión Clientes</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
        }


        table, tr, td {
            border-collapse: collapse;
            border: 1px solid #ccc;
            padding-left: 5px;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-row-group;
        }

        tr {
            page-break-inside: avoid;
        }

        table, tr, td, th, tbody, thead, tfoot, td div {
            page-break-inside: avoid !important;
        }
    </style>

</head>

<body>
    <table style="width:100%">

        <thead>
            <tr>
                <th colspan="7" style="text-align: center; background-color: #D8D8D8">DATOS GENERALES</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td><strong>NOMBRE: </strong> <br />@Model.cliente</td>
                <td><strong>CEDULA/NIT: </strong> <br />@Model.documento</td>
                <td><strong>ASESOR: </strong> <br />@Model.asesor</td>

            </tr>

        </tbody>
    </table>
    <br />


    <table style="width:100%">

        <tr style="width:100%">
            <th colspan="4" style="text-align:center; background-color:#D8D8D8">REPUESTOS</th>
        </tr>

        <tr style="width:100%">
            <td colspan="4">
                <table width="100%">

                    <tr style="width:100%">
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8">CODIGO</td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8">DESCRIPCION</td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8">CANTIDAD</td>
                        <td colspan="4" style="text-align:center; background-color:#D8D8D8">PRECIO UNITARIO</td>
                    </tr>

                    @foreach (var item2 in Model.repuestos)
                    {
                        <tr style="width:100%">

                            <td colspan="4">@item2.codigo</td>
                            <td colspan="4">@item2.nombre</td>
                            <td colspan="4">@item2.cantidad</td>
                            <td colspan="4">@item2.precio_unitario</td>

                        </tr>

                    }
                    
                </table>

            </td>
        </tr>

    </table>
    <br />

    <table style="width:100%">

        <tr style="width:100%">
            <td colspan="8"><strong>SUBTOTAL</strong></td>
            <td colspan="8">@Model.subtotal</td>
        </tr>

        <tr style="width:100%">
            <td colspan="8"><strong>IVA </strong></td>
            <td colspan="8">@Model.valoriva</td>
        </tr>

        <tr style="width:100%">
            <td colspan="8"><strong>DESCUENTO</strong></td>
            <td colspan="8">@Model.totaldescuento</td>
        </tr>

        <tr style="width:100%">
            <td colspan="8"><strong>VALOR TOTAL</strong></td>
            <td colspan="8">@Model.totalFactura</td>
        </tr>
    </table>

</body>

</html>
