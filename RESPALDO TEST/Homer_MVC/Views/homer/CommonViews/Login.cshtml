@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}
    <div class="login-container">
        <img class="img-login"  src="~/Images/erp.jpg"/>
        <div class="row">
            <div class="col-md-12">
                <div class="hpanel">
                    <div class="panel-body">
                        <div class="text-center m-b-md">
                            <h3>INICIAR SESIÓN</h3>
                            <small>Por favor ingrese sus datos de usuario</small>
                        </div>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "loginForm"}))
                        {
                            <div class="form-group">
                                <label class="control-label">Usuario</label>
                                @Html.TextBox("Usuario", null, new { @class = "form-control", @placeholder = "exiware", @title = "Por favor ingrese su usuario"})
                                <span class="help-block small"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Password</label>
                                @*@Html.PasswordFor(m => m, new { @class = "form-control", @placeholder = "******", @title = "Por favor ingrese su contraseña" })*@
                                <input type="password" title="Por favor ingrese su contraseña" placeholder="******" required="" value="" name="password" id="password" class="form-control">
                                <span class="help-block small"></span>
                            </div>
                            <button class="btn btn-success btn-block">Ingresar</button>
                        }
                        <br />
                            <div class="col-md-12 text-center">
                                <strong>ERP</strong> - Gestión empresarial <br /> 2017 Copyright EXIWARE
                            </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
        