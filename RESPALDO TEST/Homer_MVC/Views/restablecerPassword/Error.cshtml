@{
    ViewBag.Icono = "fa fa-lock";
    ViewBag.Title = "Cambiar Contraseña";
    Layout = null;
}

@Styles.Render("~/bundles/font-awesome/css")
@Styles.Render("~/bundles/bootstrap/css")
@Styles.Render("~/bundles/peicon7stroke/css")
@Styles.Render("~/bundles/homer/css")

<br />
<br />
<br />
<div class="panel-body col-md-6 col-md-offset-3">
    <div class="hpanel">
        <div class="panel-body">
            <a class="small-header-action" href="">
                <div class="clip-header">
                    <i class="fa fa-arrow-up"></i>
                </div>
            </a>

            <div id="hbreadcrumb" class="pull-right m-t-lg">
                <ol class="hbreadcrumb breadcrumb">
                    @*<li><a href="#">Inicio</a></li>
                        <li>
                            <span>Sistema</span>
                        </li>
                        <li class="active">
                            <span>@ViewBag.Title</span>
                        </li>*@
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                <i class="text-info @ViewBag.Icono"></i>&nbsp;&nbsp;@ViewBag.Title
            </h2>
            <small>Actualizar @ViewBag.Title</small>
        </div>
    </div>
</div>

<div class="panel-body">
    <div class="hpanel">


        @*<div id="crear" class="tab-pane active col-md-6">*@
        <div class="panel-body col-md-6 col-md-offset-3">


            <div class="panel-body-btns text-right">
                @*<a class="btn btn-info" href="../../usuario"><i class="@ViewBag.Icono-plus"></i>&nbsp;&nbsp;&nbsp;Crear nuevo</a>&nbsp;&nbsp;*@

            </div>

            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="panel-body text-left">
                    <h3 class="panel-body-title">
                        <i class="ViewBag.Icono"></i>&nbsp;&nbsp;&nbsp;Cambiar Credenciales
                    </h3>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label col-md-12" style="text-align:left">No se puede realizar cambio de Contrase&ntilde;a por alguna de las siguientes razones:&nbsp;<span class="text-danger"></span></label>
                        </div>
                    </div>

                    <ul class="list-group">
                        <li class="list-group-item">El enlace no esta bien escrito, verifique que es la direccion es la correcta</li>
                        <li class="list-group-item">El enlace ya no es valido y debe solicitar cambio de contraseña nuevamente</li>
                        <li class="list-group-item">El usuario está bloqueado y debe contactar a un administrador del sistema para solicitar su reactivación</li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
