@model Homer_MVC.Models.modificarCosto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bajar costo</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
        }

        table, tr, td {
            border-collapse: collapse;
            border: 1px solid #ccc;
            padding-left: 5px;
        }

        body {
            font-size: 15px;
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>

            <td colspan="5">COMERCIALIZADORA HOMAZ S.A.S</td>
            <td>@Model.tipoEntrada</td>
            <td>N° @Model.numeroRegistro</td>

        </tr>
        <tr>

            <td colspan="6" align="center">@Model.nombreBodega</td>
            <td>@Model.fechaRegistro</td>

        </tr>
        <tr>

            <td align="center">Secuencia</td>
            <td align="center">Número Referencia</td>
            <td colspan="3" align="center">Descripción</td>
            <td align="center">Valor</td>
            <td align="center">Notas</td>



        </tr>
        @for (var u = 0; u < @Model.referencias.Count(); u++)
        {
            <tr>

                <td align="center">@Model.referencias[u].secuencia</td>
                <td align="right">@Model.referencias[u].codigo</td>
                <td colspan="3" align="left">@Model.referencias[u].descripcion</td>
                <td align="right">@Model.referencias[u].costoModificacionBajada</td>
                <td align="left">@Model.notas</td>


            </tr>

        }
        <tr>
            <td colspan="5" align="right">Total</td>
            <td align="right">@Model.TotalTotales</td>
        </tr>
    </table>
</body>
</html>


