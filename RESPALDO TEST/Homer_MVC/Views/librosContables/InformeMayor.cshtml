@model Homer_MVC.Models.PDFmodel
@using System.Globalization;

@{
    Layout = null;
    CultureInfo elGR = CultureInfo.CreateSpecificCulture("el-GR");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Informe libro mayor</title>
    <style type="text/css">
        .contenedor {
            width: 100%;
            height: 100%;
        }

        table, tr, td {
            border-collapse: collapse;
            border: 1px solid #ccc;
            padding-left: 5px;
        }

        body {
            font-size: 15px;
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr style="border:hidden">
            <th colspan="3" style="border:hidden ; text-align:left">COMERCIALIZADORA HOMAZ S.A.S</th>
            <th><h3>Libro mayor @Model.nombre_libro</h3></th>
            <th colspan="2" style="text-align:center">@Model.mes_cuenta - @Model.anio_cuenta</th>
        </tr>

        <tr style="border:hidden">

            <td align="center" style="border:hidden"><u>CUENTA</u></td>
            <td align="center" style="border:hidden"><u>DESCRIPCIÓN</u></td>
            <td align="center" style="border:hidden"><u>SALDO INICIAL</u></td>
            <td align="center" style="border:hidden"><u>DÉBITO</u></td>
            <td align="center" style="border:hidden"><u>CRÉDITO</u></td>
            <td align="center" style="border:hidden"><u>SALDO ACTUAL</u></td>

        </tr>
        <tr>
            <th></th>
        </tr>
        @for (var u = 0; u < @Model.referencias.Count(); u++)
            {
            <tr style="border:hidden">

                <td style="border:hidden" align="center">@Model.referencias[u].numero_cuenta</td>
                <td style="border:hidden" align="left">@Model.referencias[u].descripcion_cuenta</td>
                <td style="border:hidden" align="right">@Model.referencias[u].saldo_inicial.ToString("0,0", elGR)</td>
                <td style="border:hidden" align="right">@Model.referencias[u].debito.ToString("0,0", elGR)</td>
                <td style="border:hidden" align="right">@Model.referencias[u].credito.ToString("0,0", elGR)</td>
                <td style="border:hidden" align="right">@Model.referencias[u].saldo_actual.ToString("0,0", elGR)</td>

            </tr>
        }
        <tr></tr>
        <tr>
            <td colspan="2" align="left" style="border:hidden"><strong>TOTAL GENERAL</strong></td>
            <td align="right" style="border-bottom:hidden; border-right:hidden; border-top:solid 1px"><strong>@Model.total_saldoInicial.ToString("0,0", elGR)</strong></td>
            <td align="right" style="border-bottom:hidden; border-right:hidden; border-top:solid 1px"><strong>@Model.total_debito.ToString("0,0", elGR)</strong></td>
            <td align="right" style="border-bottom:hidden; border-right:hidden; border-top:solid 1px"><strong>@Model.total_credito.ToString("0,0", elGR)</strong></td>
            <td align="right" style="border-bottom:hidden; border-right:hidden; border-top:solid 1px"><strong>@Model.total_saldoActual.ToString("0,0", elGR)</strong></td>
        </tr>
    </table>
</body>
</html>



