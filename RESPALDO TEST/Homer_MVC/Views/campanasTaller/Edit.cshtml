                $('#alertaVin').show();
                setTimeout(function () {
                    $("#alertaVin").fadeOut(1500);
                }, 3000);
            } else {

                if (validarYaCreado() == true) {
                    $('#alertaMensaje').text('El codigo VIN ya se encuentra registrado en esta campaña.');
                    $('#alertaVin').show();
                    setTimeout(function () {
                        $("#alertaVin").fadeOut(1500);
                    }, 3000);
